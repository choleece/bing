<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.choleece.bing.common.mapper.SysRoleMapper">

    <resultMap id="sysRole" type="cn.choleece.bing.common.entity.SysRole">
        <id property="roleId" column="role_id"/>
        <result property="roleName" column="role_name"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <select id="listSysRole" resultMap="sysRole">
        SELECT role_id, role_name, DATE_FORMAT(create_time, "%Y-%m-%d %T")
        FROM sys_role
    </select>

</mapper>